{
  "name": "@vermaysha/hoyolab-api",
  "version": "2.2.2",
  "description": "Its unofficial HoYoLab API Wrapper for getting hoyoverse some in-game data, including Genshin Impact, Honkai Impact 3rd.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:docs": "rimraf docs/ && typedoc",
    "build:tsc": "rimraf dist/ && tsc -b -f",
    "build": "npm run build:tsc && npm run build:docs",
    "format": "prettier src/**/* -w",
    "lint": "npx eslint src/**/* --fix",
    "test": "NODE_ENV=test jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vermaysha/hoyolab-api.git"
  },
  "keywords": [
    "hoyolab-api",
    "hoyolab",
    "hoyoverse",
    "api"
  ],
  "author": {
    "name": "Ashary Vermaysha",
    "email": "vermaysha@gmail.com"
  },
  "license": "LGPL-2.1-only",
  "bugs": {
    "url": "https://github.com/vermaysha/hoyolab-api/issues"
  },
  "homepage": "https://github.com/vermaysha/hoyolab-api#readme",
  "files": [
    "dist/**/*.js"
  ],
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.4.0",
    "@types/md5": "^2.3.2",
    "@types/node": "^18.14.6",
    "@types/prettier": "^2.7.2",
    "@types/standard-version": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.3.1",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "tsx": "^3.12.3",
    "typedoc": "^0.23.26",
    "typedoc-plugin-coverage": "^2.0.0",
    "typedoc-plugin-extras": "^2.3.2",
    "typedoc-plugin-mdn-links": "^3.0.3",
    "typedoc-plugin-versions": "^0.2.3",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "md5": "^2.3.0"
